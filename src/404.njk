<script>
    // Add some fun 404 page effects
    document.addEventListener('DOMContentLoaded', function() {
        // Simulate search attempts
        const searchMessages = [
            'Scanning sector 7G...',
            'Checking backup archives...',
            'Consulting the Mentat databases...',
            'Asking the Oracle...',
            'Deploying probe droids...',
            'Search completed. Page remains in the void.'
        ];
        
        let messageIndex = 0;
        const messageElement = document.querySelector('.text-neon-cyan');
        
        const searchInterval = setInterval(() => {
            if (messageIndex < searchMessages.length - 1) {
                messageElement.textContent = `[SEARCHING] ${searchMessages[messageIndex]}`;
                messageIndex++;
            } else {
                messageElement.textContent = '[COMPLETE] Search protocols exhausted. Page not found in this reality.';
                clearInterval(searchInterval);
            }
        }, 1500);
        
        // Add some random glitch effects to the error code
        const errorCode = document.querySelector('h1');
        setInterval(() => {
            if (Math.random() < 0.1) {
                errorCode.style.transform = `translateX(${Math.random() * 4 - 2}px)`;
                setTimeout(() => {
                    errorCode.style.transform = 'translateX(0)';
                }, 100);
            }
        }, 2000);
    });
</script>